{
  "manifest_version": 3,
  "name": "GitHub Color Changer",
  "version": "1.0",
  "description": "Adds a button to change GitHub's background color",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
